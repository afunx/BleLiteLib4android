<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.afunx.ble.blelitelib.app">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.afunx.ble.blelitelib.activity.ScanActivity"
            android:label="@string/title_activity_scan"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.afunx.ble.blelitelib.activity.ServiceListActivity"
            android:label="@string/title_activity_service_list"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.afunx.ble.blelitelib.activity.PropertyListActivity"
            android:label="@string/title_activity_property_list"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.afunx.ble.blelitelib.test.TestActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>